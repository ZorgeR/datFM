<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="10dp">
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNewFolderName" android:layout_centerHorizontal="true" android:layout_centerVertical="true"
            android:inputType="textUri"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_dialog_operation_rename_only_extention"
            android:id="@+id/checkEXT" android:layout_gravity="left|center_vertical"/>
</LinearLayout>
